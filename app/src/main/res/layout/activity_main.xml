<?xml version="1.0" encoding="utf-8"?>
<com.sonaive.focuschangeanimation.DrawBorderGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true"
    android:columnOrderPreserved="false"
    android:columnCount="2"
    android:focusable="false"
    android:focusableInTouchMode="false"
    tools:context="com.sonaive.focuschangeanimation.MainActivity">

    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:textSize="36sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:background="@drawable/text_selector"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:textSize="36sp"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/text_selector"
        android:text="2" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:textSize="44sp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:background="@drawable/text_selector"
        android:text="3" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="36sp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:background="@drawable/text_selector"
        android:text="4" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="92dp"
        android:textSize="80sp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:background="@drawable/text_selector"
        android:text="5" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="119dp"
        android:textSize="44sp"
        android:gravity="center"
        android:layout_marginLeft="38dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:background="@drawable/text_selector"
        android:text="6" />
</com.sonaive.focuschangeanimation.DrawBorderGridLayout>
